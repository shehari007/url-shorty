# ===========================================
# Shorty URL Server - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=8080

# Database Configuration (MySQL)
DBHOST=localhost
DBPORT=3306
DBUSERNAME=your_db_username
DBPASS=your_db_password
DBNAME=shorty_db

# URL Configuration
SHORTURLDEF=https://short.msyb.dev/
PARAMLEN=5

# CORS Configuration (comma-separated for multiple origins)
DOMAINS=http://localhost:3000,https://shorty.msyb.dev
METHODS=GET,POST,OPTIONS

# Frontend Links (used in redirects and emails)
HOMEPAGE_LINK=https://shorty.msyb.dev
CONTACTUS_LINK=https://shorty.msyb.dev/contact

# Logging (set to 'false' to disable for Vercel/serverless)
ENABLE_LOGGING=true

# Rate Limiting (optional - defaults are set in constants.js)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
